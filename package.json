{
  "name": "chatroom",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch-client & npm run watch-server & nodemon server.js",
    "watch-client": "cross-env NODE_ENV=development webpack -w --config webpack.config.client.js",
    "watch-server": "cross-env NODE_ENV=development webpack -w --config webpack.config.server.js",
    "build": "npm run build-client && npm run build-server && node server.js",
    "build-client": "cross-env NODE_ENV=production webpack --colors --optimize-minimize --config webpack.config.client.js",
    "build-server": "cross-env NODE_ENV=production webpack --colors --config webpack.config.server.js",
    "test": "cross-env NODE_ENV=test NODE_PATH=. mocha --compilers js:babel-core/register --recursive 'test/**/*.test.jsx' --require test/setup.jsx"
  },
